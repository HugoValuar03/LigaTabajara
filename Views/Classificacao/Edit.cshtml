@model LigaTabajara.Models.Classificacao

@{
    ViewBag.Title = "Editar Classificação";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5" style="max-width: 700px">
    <h2 class="text-center mb-4">Editar Classificação</h2>

    <div class="card shadow p-4">
        <h4 class="mb-3">@Model.Time.Nome</h4>
        <hr />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.TimeId, "Time", new { @class = "form-label" })
                @Html.DropDownList("TimeId", null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TimeId, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.Pontos, new { @class = "form-label" })
                @Html.EditorFor(model => model.Pontos, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Pontos, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.Jogos, new { @class = "form-label" })
                @Html.EditorFor(model => model.Jogos, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Jogos, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.Vitorias, new { @class = "form-label" })
                @Html.EditorFor(model => model.Vitorias, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Vitorias, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.Empates, new { @class = "form-label" })
                @Html.EditorFor(model => model.Empates, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Empates, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.Derrotas, new { @class = "form-label" })
                @Html.EditorFor(model => model.Derrotas, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Derrotas, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.GolsPro, new { @class = "form-label" })
                @Html.EditorFor(model => model.GolsPro, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GolsPro, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.GolsContra, new { @class = "form-label" })
                @Html.EditorFor(model => model.GolsContra, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GolsContra, "", new { @class = "text-danger" })
            </div>

            @Html.HiddenFor(model => model.Id)

            <div class="d-flex justify-content-between mt-4">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}