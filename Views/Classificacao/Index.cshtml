@model IEnumerable<LigaTabajara.Models.Classificacao>

@{
    ViewBag.Title = "Classificação";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2 class="text-center">Classificação</h2>

    <p class="text-center">
        @Html.ActionLink("Adicionar Registro", "Create", null, new { @class = "btn btn-primary" })
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered text-center">
            <thead class="thead-dark">
                <tr>
                    <th class="text-center">Time</th>
                    <th class="text-center">Pontos</th>
                    <th class="text-center">Jogos</th>
                    <th class="text-center">Vitórias</th>
                    <th class="text-center">Empates</th>
                    <th class="text-center">Derrotas</th>
                    <th class="text-center">Gols Pró</th>
                    <th class="text-center">Gols Contra</th>
                    <th class="text-center">Saldo</th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Time.Nome)</td>
                            <td>@Html.DisplayFor(modelItem => item.Pontos)</td>
                            <td>@Html.DisplayFor(modelItem => item.Jogos)</td>
                            <td>@Html.DisplayFor(modelItem => item.Vitorias)</td>
                            <td>@Html.DisplayFor(modelItem => item.Empates)</td>
                            <td>@Html.DisplayFor(modelItem => item.Derrotas)</td>
                            <td>@Html.DisplayFor(modelItem => item.GolsPro)</td>
                            <td>@Html.DisplayFor(modelItem => item.GolsContra)</td>
                            <td>@(item.GolsPro - item.GolsContra)</td>
                            <td class="text-nowrap">
                                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-warning me-1" })
                                @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-info me-1" })
                                @Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-danger me-1" })
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="10" class="text-center">Nenhum registro de classificação encontrado.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>