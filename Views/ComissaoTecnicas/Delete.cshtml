@model LigaTabajara.Models.ComissaoTecnica

@{
    ViewBag.Title = "Excluir Comissão Técnica";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5" style="max-width: 700px">
    <h2 class="text-center mb-4 text-danger">Tem certeza que deseja excluir este membro da comissão técnica?</h2>

    <div class="card shadow p-4">
        <h4 class="mb-3">Detalhes da Comissão Técnica</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Time)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Time.Nome)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Nome)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DataNascimento)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.DataNascimento)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Cargo)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Cargo)</dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="d-flex justify-content-between mt-4">
                <input type="submit" value="Excluir" class="btn btn-danger" />
                @Html.ActionLink("Voltar para a Lista", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        }
    </div>
</div>
