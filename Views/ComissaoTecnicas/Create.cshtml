@model LigaTabajara.Models.ComissaoTecnica

@{
    ViewBag.Title = "Cadastrar Comissão Técnica";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5" style="max-width: 700px">
    <h2 class="text-center mb-4">Cadastrar Comissão Técnica</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="card shadow p-4 gap-4" style="display: flex; justify-content: center;">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <!-- Nome -->
            <div class="form-group row">
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Cargo -->
            <div class="form-group row">
                @Html.LabelFor(model => model.Cargo, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-8">
                    @Html.EnumDropDownListFor(model => model.Cargo, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Cargo, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Data de Nascimento -->
            <div class="form-group row">
                @Html.LabelFor(model => model.DataNascimento, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.DataNascimento, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                    @Html.ValidationMessageFor(model => model.DataNascimento, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Time -->
            <div class="form-group row">
                @Html.LabelFor(model => model.TimeId, "Time", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-8">
                    @Html.DropDownList("TimeId", null, "Selecione", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.TimeId, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Botões -->
            <div class="form-group row">
                <div class="col-md-offset-3 col-md-8">
                    <input type="submit" value="Cadastrar" class="btn btn-primary" />
                    @Html.ActionLink("Voltar para a Lista", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
