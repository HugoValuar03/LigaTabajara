@model LigaTabajara.Models.Time

@{
    ViewBag.Title = $"Editar Time: {Model.Nome}";
}

@section Styles {
    <!-- Add any custom CSS styles for this view -->
    <style>
        /* Example: Custom styles for the Edit view */
        .form-group {
            margin-bottom: 15px;
        }
    </style>
}

<h2 class="text-center mb-4">Editar Time: @Model.Nome</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card shadow-sm">
        <div class="card-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "form-label fw-bold" })
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Estado, htmlAttributes: new { @class = "form-label fw-bold" })
                @Html.EditorFor(model => model.Estado, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.AnoFundacao, htmlAttributes: new { @class = "form-label fw-bold" })
                @Html.EditorFor(model => model.AnoFundacao, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                @Html.ValidationMessageFor(model => model.AnoFundacao, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Estadio, htmlAttributes: new { @class = "form-label fw-bold" })
                @Html.EditorFor(model => model.Estadio, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Estadio, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CapacidadeEstadio, htmlAttributes: new { @class = "form-label fw-bold" })
                @Html.EditorFor(model => model.CapacidadeEstadio, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                @Html.ValidationMessageFor(model => model.CapacidadeEstadio, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CorUniforme, htmlAttributes: new { @class = "form-label fw-bold" })
                @Html.DropDownListFor(model => model.CorUniforme,
                    (SelectList)ViewBag.CorUniformeList,
                    "Selecione a cor do uniforme",
                    htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CorUniforme, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Salvar</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
            </div>
        </div>
    </div>
}