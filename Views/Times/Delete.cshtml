@model LigaTabajara.Models.Time

@{
    ViewBag.Title = "Excluir Time";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5" style="max-width: 700px">
    <h2 class="text-center mb-4 text-danger">Tem certeza que deseja excluir este time?</h2>

    <div class="card shadow p-4">
        <h4 class="mb-3">Detalhes do Time</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Nome)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Estado)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Estado)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.AnoFundacao)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.AnoFundacao)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Estadio)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Estadio)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CapacidadeEstadio)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.CapacidadeEstadio)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CorUniforme)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.CorUniforme)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Status)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Status)</dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="d-flex justify-content-between mt-4">
                <input type="submit" value="Excluir" class="btn btn-danger" />
                @Html.ActionLink("Voltar para a Lista", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        }
    </div>
</div>
