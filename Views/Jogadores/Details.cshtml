@model LigaTabajara.Models.Jogador

@{
    ViewBag.Title = $"Detalhes do Jogador: {Model.Nome}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        .card {
            border-radius: 10px;
        }

        .card-header {
            background-color: #007bff;
            color: white;
            font-size: 1.5rem;
            padding: 15px;
        }

        .card-body {
            padding: 20px;
        }

        .row dt {
            font-weight: bold;
            padding-top: 8px;
            padding-bottom: 8px;
        }

        .row dd {
            padding-top: 8px;
            padding-bottom: 8px;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .btn-secondary {
            background-color: #6c757d;
            border: none;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
            }
    </style>
}

<div class="card shadow-sm">
    <div class="card-header">
        <h4>@ViewBag.Title</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nome)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DataNascimento)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.DataNascimento, "{0:dd/MM/yyyy}")</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nacionalidade)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nacionalidade)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Posicao)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Posicao)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NumeroCamisa)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.NumeroCamisa)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Altura)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Altura) cm</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Peso)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Peso) kg</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.PePreferido)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.PePreferido)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Time.Nome)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Time.Nome)</dd>

            <dt class="col-sm-3">Total de Gols</dt>
            <dd class="col-sm-9">@ViewBag.TotalGols</dd>

            <dt class="col-sm-3">Gols Contra</dt>
            <dd class="col-sm-9">@ViewBag.GolsContra</dd>

            <dt class="col-sm-3">Saldo de Gols</dt>
            <dd class="col-sm-9">@ViewBag.SaldoGols</dd>
        </dl>

        <div class="mt-3">
            <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary">Editar</a>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Voltar para a Lista</a>
        </div>
    </div>
</div>