@model IEnumerable<LigaTabajara.Models.Jogador>

@{
    ViewBag.Title = "Jogadores";
}

<h2>Jogadores</h2>

<p>
    @Html.ActionLink("Criar Novo Jogador", "Create")
</p>
<table class="table">
    <tr>
        <th>Nome</th>
        <th>Data de Nascimento</th>
        <th>Nacionalidade</th>
        <th>Posição</th>
        <th>Número da Camisa</th>
        <th>Altura</th>
        <th>Peso</th>
        <th>Pé Preferido</th>
        <th>Time</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
            <td>@Html.DisplayFor(modelItem => item.DataNascimento)</td>
            <td>@Html.DisplayFor(modelItem => item.Nacionalidade)</td>
            <td>@Html.DisplayFor(modelItem => item.Posicao)</td>
            <td>@Html.DisplayFor(modelItem => item.NumeroCamisa)</td>
            <td>@Html.DisplayFor(modelItem => item.Altura)</td>
            <td>@Html.DisplayFor(modelItem => item.Peso)</td>
            <td>@Html.DisplayFor(modelItem => item.PePreferido)</td>
            <td>@Html.DisplayFor(modelItem => item.Time.Nome)</td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                @Html.ActionLink("Excluir", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>