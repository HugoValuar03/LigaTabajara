@model LigaTabajara.Models.Partida

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
.delete-container {
    max-width: 600px;
    margin: 40px auto;
    padding: 20px;
    background-color: #ffffff;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.delete-title {
    font-size: 28px;
    color: #333;
    text-align: center;
    margin-bottom: 10px;
}

.delete-warning {
    font-size: 18px;
    color: #d9534f;
    text-align: center;
    margin-bottom: 20px;
}

.partida-details {
    margin-bottom: 30px;
}

.partida-info {
    display: flex;
    flex-wrap: wrap;
    gap: 15px;
}

.info-label {
    font-weight: bold;
    color: #555;
    flex: 1 1 40%;
    margin-bottom: 10px;
}

.info-value {
    color: #333;
    flex: 1 1 55%;
    margin-bottom: 10px;
}

.form-actions {
    display: flex;
    justify-content: center;
    gap: 15px;
    margin-top: 20px;
}

.delete-btn {
    padding: 10px 20px;
    font-size: 16px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    background-color: #d9534f;
    color: #fff;
}

.delete-btn:hover {
    background-color: #c9302c;
}

.back-btn {
    padding: 10px 20px;
    font-size: 16px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    background-color: #6c757d;
    color: #fff;
    text-decoration: none;
}

.back-btn:hover {
    background-color: #5a6268;
}

</style>

<div class="delete-container">
    <h2 class="delete-title">Excluir Partida</h2>

    <h3 class="delete-warning">Você tem certeza que deseja excluir esta partida?</h3>
    <div class="partida-details">
        <h4>Detalhes da Partida</h4>
        <hr />
        <dl class="partida-info">
            <dt class="info-label">
                @Html.DisplayNameFor(model => model.TimeCasa)
            </dt>
            <dd class="info-value">
                @Html.DisplayFor(model => model.TimeCasa.Nome)
            </dd>

            <dt class="info-label">
                @Html.DisplayNameFor(model => model.TimeFora)
            </dt>
            <dd class="info-value">
                @Html.DisplayFor(model => model.TimeFora.Nome)
            </dd>

            <dt class="info-label">
                @Html.DisplayNameFor(model => model.DataHora)
            </dt>
            <dd class="info-value">
                @Html.DisplayFor(model => model.DataHora)
            </dd>

            <dt class="info-label">
                @Html.DisplayNameFor(model => model.Estadio)
            </dt>
            <dd class="info-value">
                @Html.DisplayFor(model => model.Estadio)
            </dd>

            <dt class="info-label">
                @Html.DisplayNameFor(model => model.PlacarCasa)
            </dt>
            <dd class="info-value">
                @Html.DisplayFor(model => model.PlacarCasa)
            </dd>

            <dt class="info-label">
                @Html.DisplayNameFor(model => model.PlacarFora)
            </dt>
            <dd class="info-value">
                @Html.DisplayFor(model => model.PlacarFora)
            </dd>

            <dt class="info-label">
                @Html.DisplayNameFor(model => model.Rodada)
            </dt>
            <dd class="info-value">
                @Html.DisplayFor(model => model.Rodada)
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions">
                <input type="submit" value="Excluir" class="delete-btn" />
                @Html.ActionLink("Voltar para a Lista", "Index", null, new { @class = "back-btn" })
            </div>
        }
    </div>
</div>